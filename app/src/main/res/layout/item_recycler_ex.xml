<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/round_button_white"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp">

    <ImageButton
        android:id="@+id/img_rv_photo"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:contentDescription="사진 업로드 버튼"
        android:src="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.TextView
        android:id="@+id/tv_rv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="#F6F5F5"
        android:text="종류"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/img_rv_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.TextView
        android:id="@+id/tv_rv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="#F6F5F5"
        android:text="위치"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/img_rv_photo"
        app:layout_constraintTop_toBottomOf="@id/tv_rv_name" />

    <android.widget.TextView
        android:id="@+id/rv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜"
        android:background="#F6F5F5"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/img_rv_photo"
        app:layout_constraintTop_toBottomOf="@id/tv_rv_age" />

    <android.widget.TextView
        android:id="@+id/rv_situate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상태: "
        android:background="#F6F5F5"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/img_rv_photo"
        app:layout_constraintTop_toBottomOf="@id/rv_place" />



</androidx.constraintlayout.widget.ConstraintLayout>